{
  "name": "hanas",
  "private": true,
  "version": "0.1.0",
  "description": "Conlanging community",
  "license": "MIT",
  "scripts": {
    "prebuild": "rimraf dist",
    "build": "nest build",
    "format": "prettier --write \"src/**/*.ts\" \"test/**/*.ts\"",
    "start": "nest start",
    "start:dev": "nest start --watch",
    "start:debug": "nest start --debug --watch",
    "start:prod": "node dist/main",
    "lint": "prettier --check --ignore-unknown .",
    "lint:fix": "prettier --write --ignore-unknown .",
    "test": "concurrently -k -s first -n \" ,s3\" npm:test:env npm:test:s3",
    "test:env": "cross-env AWS_ACCESS_KEY_ID=S3RVER AWS_SECRET_ACCESS_KEY=S3RVER AWS_ENDPOINT=http://localhost:1337 CLOUDFRONT_DOMAIN=\"\" AWS_BUCKET=hanas DATABASE_CONFIG_JSON=\"{\\\"type\\\":\\\"better-sqlite3\\\",\\\"database\\\":\\\":memory:\\\"}\" npm run test:run",
    "test:run": "rimraf db && cross-env-shell \"jest --config ./test/jest-e2e.json --runInBand\"",
    "test:watch": "rimraf db && jest --watch --config ./test/jest-e2e.json --runInBand",
    "test:debug": "rimraf db && node --inspect-brk -r tsconfig-paths/register -r ts-node/register node_modules/.bin/jest --runInBand --config ./test/jest-e2e.json",
    "delete_db": "rimraf db",
    "test:s3": "s3rver -s -p 1337 -d s3 --configure-bucket hanas"
  },
  "dependencies": {
    "@nestjs/common": "7.6.15",
    "@nestjs/core": "7.6.15",
    "@nestjs/jwt": "7.2.0",
    "@nestjs/mapped-types": "0.4.1",
    "@nestjs/passport": "7.1.5",
    "@nestjs/platform-express": "7.6.15",
    "@nestjs/typeorm": "7.1.5",
    "aws-sdk": "2.877.0",
    "base-64": "1.0.0",
    "bcrypt": "5.0.1",
    "better-sqlite3": "7.1.4",
    "bytes": "3.1.0",
    "class-transformer": "0.4.0",
    "class-validator": "0.13.1",
    "cross-env": "7.0.3",
    "dotenv-defaults": "2.0.1",
    "image-size": "0.9.7",
    "jsonwebtoken": "8.5.1",
    "multer": "1.4.2",
    "multer-s3-v3": "3.10.0",
    "nanoid": "3.1.22",
    "nest-router": "1.0.9",
    "node-fetch": "2.6.1",
    "passport": "0.4.1",
    "passport-jwt": "4.0.0",
    "passport-local": "1.0.0",
    "reflect-metadata": "0.1.13",
    "rimraf": "3.0.2",
    "rxjs": "6.6.7",
    "sharp": "0.28.0",
    "typeorm": "0.2.32",
    "typeorm-cursor-pagination": "0.6.0",
    "ua-parser-js": "0.7.26",
    "wait-on": "5.3.0"
  },
  "devDependencies": {
    "@nestjs/cli": "7.6.0",
    "@nestjs/schematics": "7.3.1",
    "@nestjs/testing": "7.6.15",
    "@types/bcrypt": "3.0.0",
    "@types/bytes": "3.1.0",
    "@types/express": "4.17.11",
    "@types/jest": "26.0.22",
    "@types/jsonwebtoken": "8.5.1",
    "@types/multer": "1.4.5",
    "@types/node": "14.14.37",
    "@types/node-fetch": "2.5.8",
    "@types/passport-jwt": "3.0.5",
    "@types/passport-local": "1.0.33",
    "@types/sharp": "0.27.3",
    "@types/supertest": "2.0.11",
    "@types/ua-parser-js": "0.7.35",
    "@types/wait-on": "5.2.0",
    "@typescript-eslint/eslint-plugin": "4.20.0",
    "@typescript-eslint/parser": "4.20.0",
    "concurrently": "6.0.0",
    "eslint": "7.23.0",
    "eslint-config-prettier": "8.1.0",
    "eslint-plugin-prettier": "3.3.1",
    "jest": "26.6.3",
    "prettier": "2.2.1",
    "s3rver": "3.6.1",
    "supertest": "6.1.3",
    "ts-jest": "26.5.4",
    "ts-loader": "8.1.0",
    "ts-node": "9.1.1",
    "tsconfig-paths": "3.9.0",
    "typescript": "4.2.3"
  },
  "jest": {
    "moduleFileExtensions": [
      "js",
      "json",
      "ts"
    ],
    "rootDir": "src",
    "testRegex": ".*\\.spec\\.ts$",
    "transform": {
      "^.+\\.(t|j)s$": "ts-jest"
    },
    "collectCoverageFrom": [
      "**/*.(t|j)s"
    ],
    "coverageDirectory": "../coverage",
    "testEnvironment": "node",
    "moduleDirectories": [
      "node_modules",
      "./"
    ]
  }
}
