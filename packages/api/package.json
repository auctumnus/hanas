{
  "name": "hanas",
  "private": true,
  "version": "0.1.0",
  "description": "Conlanging community",
  "license": "MIT",
  "scripts": {
    "prebuild": "rimraf dist",
    "build": "nest build",
    "format": "prettier --write \"src/**/*.ts\" \"test/**/*.ts\"",
    "start": "nest start",
    "start:dev": "nest start --watch",
    "start:debug": "nest start --debug --watch",
    "start:prod": "node dist/main",
    "lint": "eslint \"{src,apps,libs,test}/**/*.ts\" --fix",
    "test": "jest --config ./test/jest-e2e.json --runInBand",
    "test:watch": "jest --watch --config ./test/jest-e2e.json --runInBand",
    "test:debug": "node --inspect-brk -r tsconfig-paths/register -r ts-node/register node_modules/.bin/jest --runInBand --config ./test/jest-e2e.json",
    "delete_db": "rimraf db"
  },
  "dependencies": {
    "@nestjs/common": "7.5.3",
    "@nestjs/core": "7.5.3",
    "@nestjs/mapped-types": "0.1.1",
    "@nestjs/platform-express": "7.5.3",
    "@nestjs/typeorm": "7.1.5",
    "base-64": "1.0.0",
    "bcrypt": "5.0.0",
    "better-sqlite3": "7.1.1",
    "class-transformer": "0.3.1",
    "class-validator": "0.12.2",
    "reflect-metadata": "0.1.13",
    "rimraf": "3.0.2",
    "rxjs": "6.6.3",
    "typeorm": "0.2.29",
    "typeorm-cursor-pagination": "0.4.1"
  },
  "devDependencies": {
    "@nestjs/cli": "7.5.3",
    "@nestjs/schematics": "7.2.2",
    "@nestjs/testing": "7.5.3",
    "@types/bcrypt": "3.0.0",
    "@types/express": "4.17.9",
    "@types/jest": "26.0.15",
    "@types/node": "14.14.8",
    "@types/supertest": "2.0.10",
    "@typescript-eslint/eslint-plugin": "4.8.1",
    "@typescript-eslint/parser": "4.8.1",
    "eslint": "7.13.0",
    "eslint-config-prettier": "6.15.0",
    "eslint-plugin-prettier": "3.1.4",
    "jest": "26.6.3",
    "prettier": "2.1.2",
    "supertest": "6.0.1",
    "ts-jest": "26.4.4",
    "ts-loader": "8.0.11",
    "ts-node": "9.0.0",
    "tsconfig-paths": "3.9.0",
    "typescript": "4.0.5"
  },
  "jest": {
    "moduleFileExtensions": [
      "js",
      "json",
      "ts"
    ],
    "rootDir": "src",
    "testRegex": ".*\\.spec\\.ts$",
    "transform": {
      "^.+\\.(t|j)s$": "ts-jest"
    },
    "collectCoverageFrom": [
      "**/*.(t|j)s"
    ],
    "coverageDirectory": "../coverage",
    "testEnvironment": "node"
  }
}
