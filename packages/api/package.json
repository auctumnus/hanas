{
  "name": "api",
  "private": true,
  "version": "0.1.0",
  "description": "Conlanging community",
  "license": "MIT",
  "scripts": {
    "prebuild": "rimraf dist",
    "build": "nest build",
    "format": "prettier --write \"src/**/*.ts\" \"test/**/*.ts\"",
    "start": "nest start",
    "start:dev": "nest start --watch",
    "start:debug": "nest start --debug --watch",
    "start:prod": "node dist/main",
    "lint": "prettier --check --ignore-unknown .",
    "lint:fix": "prettier --write --ignore-unknown .",
    "test": "concurrently -k -s first -n \" ,s3\" npm:test:env npm:test:s3",
    "test:env": "cross-env AWS_ACCESS_KEY_ID=S3RVER AWS_SECRET_ACCESS_KEY=S3RVER AWS_ENDPOINT=http://localhost:1337 CLOUDFRONT_DOMAIN=\"\" AWS_BUCKET=hanas DATABASE_CONFIG_JSON=\"{\\\"type\\\":\\\"better-sqlite3\\\",\\\"database\\\":\\\":memory:\\\"}\" npm run test:run",
    "test:run": "rimraf db && cross-env-shell \"jest --config ./test/jest-e2e.json --runInBand\"",
    "test:watch": "rimraf db && jest --watch --config ./test/jest-e2e.json --runInBand",
    "test:debug": "rimraf db && node --inspect-brk -r tsconfig-paths/register -r ts-node/register node_modules/.bin/jest --runInBand --config ./test/jest-e2e.json",
    "delete_db": "rimraf db",
    "test:s3": "s3rver -s -p 1337 -d s3 --configure-bucket hanas",
    "docs": "concurrently -k -s first npm:start \"wait-on http://localhost:3000 && curl http://localhost:3000/docs-json -o ../../docs/swagger.json\""
  },
  "dependencies": {
    "@nestjs/bull": "0.4.2",
    "@nestjs/common": "7.6.18",
    "@nestjs/core": "7.6.18",
    "@nestjs/jwt": "8.0.0",
    "@nestjs/mapped-types": "0.4.1",
    "@nestjs/passport": "7.1.6",
    "@nestjs/platform-express": "7.6.18",
    "@nestjs/schedule": "0.4.3",
    "@nestjs/swagger": "4.8.2",
    "@nestjs/typeorm": "7.1.5",
    "aws-sdk": "2.1005.0",
    "base-64": "1.0.0",
    "bcrypt": "5.0.1",
    "better-sqlite3": "7.4.5",
    "bull": "3.29.3",
    "bytes": "3.1.1",
    "class-transformer": "0.4.0",
    "class-validator": "0.13.2",
    "cross-env": "7.0.3",
    "dotenv-defaults": "2.0.2",
    "image-size": "1.0.0",
    "jsonwebtoken": "8.5.1",
    "multer": "1.4.3",
    "multer-s3-v3": "3.10.0",
    "nanoid": "3.1.30",
    "nest-router": "1.0.9",
    "node-fetch": "2.6.6",
    "passport": "0.5.0",
    "passport-jwt": "4.0.0",
    "passport-local": "1.0.0",
    "reflect-metadata": "0.1.13",
    "rimraf": "3.0.2",
    "rxjs": "7.4.0",
    "sharp": "0.29.3",
    "swagger-ui-express": "4.1.6",
    "typeorm": "0.2.41",
    "typeorm-cursor-pagination": "0.6.1",
    "ua-parser-js": "0.7.28",
    "wait-on": "6.0.0"
  },
  "devDependencies": {
    "@nestjs/cli": "7.6.0",
    "@nestjs/schematics": "8.0.5",
    "@nestjs/testing": "7.6.18",
    "@types/bcrypt": "5.0.0",
    "@types/bull": "3.15.5",
    "@types/bytes": "3.1.1",
    "@types/cron": "1.7.3",
    "@types/express": "4.17.13",
    "@types/jest": "26.0.24",
    "@types/jsonwebtoken": "8.5.6",
    "@types/multer": "1.4.7",
    "@types/node": "14.17.34",
    "@types/node-fetch": "2.5.12",
    "@types/passport-jwt": "3.0.6",
    "@types/passport-local": "1.0.34",
    "@types/sharp": "0.29.4",
    "@types/supertest": "2.0.11",
    "@types/ua-parser-js": "0.7.36",
    "@types/wait-on": "5.3.1",
    "@typescript-eslint/eslint-plugin": "4.33.0",
    "@typescript-eslint/parser": "4.33.0",
    "concurrently": "6.3.0",
    "eslint": "7.32.0",
    "eslint-config-prettier": "8.3.0",
    "eslint-plugin-prettier": "3.4.1",
    "jest": "27.2.5",
    "prettier": "2.4.1",
    "redoc-cli": "0.13.0",
    "s3rver": "3.7.1",
    "simple-git-hooks": "2.6.1",
    "supertest": "6.1.6",
    "ts-jest": "27.0.7",
    "ts-loader": "9.2.6",
    "ts-node": "10.3.0",
    "tsconfig-paths": "3.11.0",
    "typescript": "4.5.2"
  },
  "jest": {
    "moduleFileExtensions": [
      "js",
      "json",
      "ts"
    ],
    "rootDir": "src",
    "testRegex": ".*\\.spec\\.ts$",
    "transform": {
      "^.+\\.(t|j)s$": "ts-jest"
    },
    "collectCoverageFrom": [
      "**/*.(t|j)s"
    ],
    "coverageDirectory": "../coverage",
    "testEnvironment": "node",
    "moduleDirectories": [
      "node_modules",
      "./"
    ]
  }
}
