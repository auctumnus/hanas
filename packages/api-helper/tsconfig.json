{
  "include": ["src/**/*.ts"],
  "exclude": ["dist/**/*"],
  "compilerOptions": {
    "target": "ES6",
    "declaration": true,
    "noEmit": false,
    "emitDeclarationOnly": true,
    "removeComments": false,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "moduleResolution": "node",

    "strict": true,

    "outDir": "./dist/types"
  }
}
